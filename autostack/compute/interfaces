# The loopback network interface
auto lo
iface lo inet loopback

# The primary network interface
auto eth0
iface eth0 inet dhcp

auto eth1
iface eth1 inet static
        address 172.16.5.2
        netmask 255.255.0.0
        network 172.16.5.0
        broadcast 172.16.5.255

auto eth2
iface eth2 inet static
        address 20.0.5.2
        netmask 255.0.0.0
        network 20.0.5.0
        broadcast 20.0.5.255