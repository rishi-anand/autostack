#!/bin/bash
 
EXPECTED_ARGS=2
E_BADARGS=65
MYSQL=`which mysql`
 
Q1="CREATE DATABASE IF NOT EXISTS $DB_NAME;"
#Q2="GRANT ALL ON *.* TO '$2'@'localhost' IDENTIFIED BY '$3';"
Q2="GRANT ALL PRIVILEGES ON $DB_NAME.* TO '$DB_NAME'@'localhost' \
  IDENTIFIED BY '$DB_PASS';"
Q3="GRANT ALL PRIVILEGES ON $DB_NAME.* TO '$DB_NAME'@'%' \
  IDENTIFIED BY '$DB_PASS';"
Q4="FLUSH PRIVILEGES;"
SQL="${Q1}${Q2}${Q3}${Q4}"
 
if [ $# -ne $EXPECTED_ARGS ]
then
  echo "Usage: $0 dbname dbpass"
  exit $E_BADARGS
fi
 
$MYSQL -uroot -p'$DATABASE_PASSWORD' -e "$SQL"

exit
